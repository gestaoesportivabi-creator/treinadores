{
  "name": "scout-21-pro-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "SCOUT 21 PRO - Sistema de GestÃ£o Esportiva (Frontend + Backend)",
  "scripts": {
    "supabase:login": "supabase login",
    "supabase:link": "supabase link --project-ref jhjrqnggsfeztgkpqcjm",
    "supabase:db-pull": "supabase db pull",
    "supabase:db-push": "supabase db push",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
