{
  "version": 2,
  "buildCommand": "cd 21Scoutpro && npm ci && npm run build",
  "outputDirectory": "21Scoutpro/dist",
  "installCommand": "cd 21Scoutpro && npm ci && cd ../backend && npm ci && cd ../api && npm ci",
  "framework": null,
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
