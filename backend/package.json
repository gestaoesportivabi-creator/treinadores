{
  "name": "scout-21-pro-backend",
  "version": "1.0.0",
  "description": "Backend PostgreSQL para SCOUT 21 PRO - Sistema de Gest√£o Esportiva",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/app.js",
    "migrate": "node -r tsx/register scripts/run-migrations.ts",
    "migrate:create": "node -r tsx/register scripts/create-migration.ts",
    "seed:demo": "tsx scripts/seed-demo-data.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "sports",
    "scout",
    "postgresql",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
